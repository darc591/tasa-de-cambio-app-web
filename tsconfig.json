{
  "compilerOptions": {
    "target": "es5",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "strictNullChecks": false,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "noImplicitAny": false,
    "incremental": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "baseUrl": "./src",
    "jsx": "preserve",
    "paths": {
      "path-to-regexp": ["node_modules/path-to-regexp/dist/index"]
    }
  },
  "include": ["**/*.ts", "**/*.tsx", "jest.config.ts", "jest.setup.ts"],
  "exclude": ["node_modules", ".eslintrc.js", "**/*.test.*"]
}
